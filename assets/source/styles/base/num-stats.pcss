.num-stats {
	width: 100%;
	display: table;
	table-layout: fixed;
	&_small {
		.num-stats__num {
			font-size: 15px;
			line-height: 18px;
		}
	}
	&__col {
		padding-right: 15px;
		display: table-cell;
	}
	&__text {
		font-size: 12px;
		color:$grey-t;
	}
	&__num {
		font-size: 24px;
		line-height: 26px;
		font-weight: 500;
		@mixin crop;
	}
}
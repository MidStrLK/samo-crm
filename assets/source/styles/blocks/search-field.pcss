.search-field {
	&:before {
		width: 18px;
		height: 18px;
		background: svg-load('../img/svg/search.svg', fill=$black);
		background-size:18px;
		float:left;
		display: block;
		content:"";
	}
	&__wrapper {
		margin-left:29px;
	}
	&__input {
		width: 100%;
		font-size: 16px;
		font-weight: 500;
		@mixin placeholder #BCBCBC;
	}
}

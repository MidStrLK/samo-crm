	&__add {
		width: 220px;
		padding:11px 15px 0;
		border-left: 1px solid $border;
	}
	&__button {
		width: 100%;
	}
	&__bottom {
		width: 100%;
		background-color: $grey;
		border-bottom:1px solid $border;
		overflow: hidden;
	}
	&__bottom-wrapper {
		padding:8px 10px 1px;
		user-select:none;
	}
	&__toggle {
		width: 120px;
		float:left;
	}
	&__divider {
		width: 15px;
		height: 38px;
		background:svg-load("../img/svg/splitter.svg", fill:#D4D4D4) no-repeat center;
		float:left;
	}
	&__quick-filters {
	    margin-left: 135px;
	}
}
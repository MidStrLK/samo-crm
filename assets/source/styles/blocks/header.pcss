.header {
	&__top {
		width: 100%;
		border-bottom:1px solid $border;
		display: table;
	}
	&__field, &__add, &__view {
		height: 66px;
		display: table-cell;
		vertical-align: top;
	}
	&__field {
		padding:24px 24px 0;
	}
	&__view {
		width: 1px;
		padding:0 18px;
		border-left: 1px solid $border;
	}
	&__view-wrapper {
		display: table;
	}
	&__view-item {
		width: 36px;
		min-width: 36px;
		height: 66px;
		display: table-cell;
		vertical-align: middle;
		background-repeat: no-repeat;
		background-position: center;
		position: relative;
		&:hover {
			cursor: pointer;
		}
		&_active {
			span {
				background-color: #4FAB89;
			}
			&:before {
				height: 3px;
				background-color:$green;
				bottom: -1px;
				left: 0px;
				right: 0px;
				position: absolute;
				display: block;
				content:"";				
			}
		}		
	}
	&__view-1, &__view-2, &__view-3 {
		width: 19px;
		height: 17px;
		margin:0px auto;
		background-color: #000000;
		display: block;
	}
	&__view-1 {
		background-image:svg-load("../img/svg/view_1.svg", fill: #fff);
	}
	&__view-2 {
		background-image:svg-load("../img/svg/view_2.svg", fill: #fff);
	}
	&__view-3 {
		background-image:svg-load("../img/svg/view_3.svg", fill: #fff);
	}

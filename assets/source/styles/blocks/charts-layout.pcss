.charts-layout {
  position: absolute;
  top:0px;
  right:0px;
  bottom:0px;
  left:0px;
  &__filters {
    height: 65px;
    padding:13px 19px 0;
  }
  &__filter {
    width: 400px;
    margin-right: 15px;
    float:left;
  }
  &__chart {
    border:1px solid $border;
    border-radius:2px;
    position: absolute;
    top:65px;
    right:19px;
    bottom:19px;
    left:20px;
  }
}